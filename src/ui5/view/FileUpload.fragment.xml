<core:FragmentDefinition 	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog	title="test">
    <customHeader>
      <Bar>
        <contentMiddle>
          <Title text="Fileupload" />          
        </contentMiddle>

        <contentRight>
          <Button  icon="sap-icon://decline" press="onCloseDialog"/>
          </contentRight>        
      </Bar>
    </customHeader>

	<l:VerticalLayout>
		<u:FileUploader
			id="fileUploader"
			name="uploadFile"
			uploadUrl="{currPage>/path}/upload/"
			uploadComplete="handleUploadComplete"
      class="sapUiSmallMarginBeginEnd"
      />

	</l:VerticalLayout>

  <buttons>
		<Button	text="Upload"	press="onUploadPress"/>
  </buttons>
    
	</Dialog>
</core:FragmentDefinition>