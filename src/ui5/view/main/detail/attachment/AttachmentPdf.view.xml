<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:uxap="sap.uxap" xmlns:u="sap.ui.unified" controllerName="lifebook.view.main.detail.attachment.Attachment" height="100%">
  <Page showHeader="false">
    <VBox class="sapUiSmallMargin">
      <PDFViewer source="/api/getFile?path={currPage>/path}&amp;name={currAttachment>/name}" showDownloadButton="false" height="40rem"></PDFViewer>
      <VBox class="sapUiSmallMarginTop">
        <Label text="Größe: {currAttachment>/size}"/>
      </VBox>
      <HBox justifyContent="End" alignItems="End" alignContent="End" class="sapUiSmallMarginTop">
        <Button type="Transparent" text="Öffnen" class="sapUiTinyMarginEnd" icon="sap-icon://pdf" press="onViewPDF"/>
        <Button type="Emphasized" text="Download" icon="sap-icon://download" press="onDownload"/>
      </HBox>
    </VBox>
  </Page>
</mvc:View>