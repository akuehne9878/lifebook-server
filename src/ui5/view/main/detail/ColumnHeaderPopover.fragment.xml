<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover placement="Bottom" showHeader="false">
        <VBox class="sapUiSmallMarginTopBottom sapUiSmallMarginBeginEnd" >
            <Label text="Formatierung" />
            <Select forceSelection="false" selectedKey="{views>formatting}" >
                <core:Item key="text" text="Text"/>
                <core:Item key="number" text="Zahl"/>
                <core:Item key="decimal" text="Dezimalzahl"/>
                <core:Item key="decimal2" text="Dezimalzahl 2-stellig"/>
                <core:Item key="date" text="Datum"/>
            </Select>
        </VBox>
    </Popover>
</core:FragmentDefinition>