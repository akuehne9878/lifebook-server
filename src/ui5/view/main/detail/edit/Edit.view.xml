<mvc:View xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m" 
  xmlns:core="sap.ui.core" 
  xmlns:layout="sap.ui.layout" 
  xmlns:uxap="sap.uxap" 
  xmlns:u="sap.ui.unified" controllerName="lifebook.view.main.detail.edit.Edit">
  <Page>
    <customHeader>
      <Bar>
        <contentMiddle>
          <Title text="Seite umbenennen" />
        </contentMiddle>
        <contentRight>
          <Button type="Transparent" icon="sap-icon://decline" press="onClose" />
        </contentRight>
      </Bar>
    </customHeader>
    <content>
      <VBox class="sapUiSmallMarginTopBottom">
        <VBox class="sapUiSmallMarginBeginEnd">
          <Input type="Text" value="{/title}" width="100%" class="sapUiSmallMarginEnd" />
        </VBox>
        <VBox justifyContent="End" alignItems="End" alignContent="End" class="sapUiSmallMarginEnd">
          <Button type="Emphasized" text="Umbenennen" icon="sap-icon://save" press="onSave" />
        </VBox>
      </VBox>
    </content>
  </Page>
</mvc:View>