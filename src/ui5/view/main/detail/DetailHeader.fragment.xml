    xmlns:core="sap.ui.core">
    <OverflowToolbar>
      <Button type="Transparent" icon="sap-icon://menu" press="onShowMaster" visible="{=(${device>/system/tablet} &amp;&amp; ${device>/orientation/portrait}) || ${device>/system/phone}}" />
      <Title text="{currPage>/title}" />
      <ToolbarSpacer />

      <Button type="Transparent" icon="sap-icon://add-document" text="Neue Seite" press="onShowNew" visible="{detailHeader>/newButton}" />
      <Button type="Transparent" icon="sap-icon://edit" text="Umbenennen" press=".onShowEdit" visible="{detailHeader>/editButton}"/>
      <Button type="Transparent" icon="sap-icon://upload" text="Upload" press="onShowUpload" visible="{detailHeader>/updateButton}" />
      <Button type="Transparent" icon="sap-icon://copy" text="Kopieren" press="onShowCopy" visible="{detailHeader>/copyButton}" />
      <Button type="Transparent" icon="sap-icon://action" text="Verschieben" press="onShowMove" visible="{detailHeader>/moveButton}" />
      <Button type="Transparent" icon="sap-icon://delete" text="LÃ¶schen" press="onDelete" visible="{detailHeader>/deleteButton}" />
      <Button type="Transparent" icon="sap-icon://save" text="Speichern" press="onSave" visible="{detailHeader>/saveButton}" />
    </OverflowToolbar>
</core:FragmentDefinition>