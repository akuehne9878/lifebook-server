<mvc:View xmlns:grid="sap.ui.layout.cssgrid" xmlns:f="sap.f" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" controllerName="lifebook.view.main.detail.attachments.Attachments" height="100%">
	<Page enableScrolling="true" showHeader="true" class="whiteBackground">
		<customHeader>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Transparent" icon="sap-icon://upload" text="Upload" press="onShowUpload"/>
			</OverflowToolbar>
		</customHeader><!-- </VBox>
				<HBox>
					<VBox class="sapUiTinyMargin">
						<Title text="{currPage>name}" wrapping="true"/>
						<Label text="{currPage>date}" wrapping="true"/>
						<Toolbar design="Transparent" class="noBorderBottom" width="100%">
							<Button icon="sap-icon://pdf-attachment" press="onViewPDF" type="Transparent" visible="{=${currPage>type} === 'PDF' }"/>
							<Button icon="sap-icon://chain-link" press="onCreateLink" type="Transparent"/>
							<Button icon="sap-icon://download" press="onDownload" type="Transparent"/>
							<Button icon="sap-icon://delete" press="onDeleteFile" type="Transparent"/>
						</Toolbar>
					</VBox>
				</HBox>
			</HBox>
		</CustomListItem> --><!-- </List></HBox> -->
		<Panel expandable="true" width="auto" class="sapUiResponsiveMargin">
			<headerToolbar>
				<OverflowToolbar height="3rem" style="Clear">
					<Title text="Bilder"/>
					<ToolbarSpacer/>
					<Button icon="sap-icon://settings"/>
					<Button icon="sap-icon://drop-down-list"/>
				</OverflowToolbar>
			</headerToolbar>
			<content>
				<f:GridList class="sapUiSmallMarginTop" items="{
        path : 'currPage>/files',
        sorter: {
            path: 'name',
            descending: false
        },
        filters : [
            { path : 'type', operator : 'EQ', value1 : 'JPG'}
        ]
    }">
					<f:customLayout>
						<grid:GridBoxLayout boxWidth="300px"/>
					</f:customLayout>
					<f:GridListItem class="noBorderBottom noPadding" type="Active" renderType="Bare">
						<VBox height="100%" renderType="Bare">
							<VBox justifyContent="SpaceBetween">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0"/><!-- Don't shrink below minimum size. Fill space if available. -->
								</layoutData>
								<Image visible="{=${currPage>thumbnail} !== undefined }" src="{currPage>thumbnail}" class="sapUiNoMargin"></Image>
								<VBox class="sapUiSmallMargin">
									<Title text="{currPage>name}" wrapping="true"/>
									<Label text="{currPage>date}" wrapping="true"/><!-- <Text text="A great description with useful information about this project. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy." wrapping="true"/> -->
								</VBox>
								<OverflowToolbar design="Solid" class="sapContrast noBorderBottom">
									<ToolbarSpacer/>
									<Button text="Edit" type="Transparent"/>
									<Button icon="sap-icon://sort" type="Transparent"/>
									<Button icon="sap-icon://group-2" type="Transparent"/>
								</OverflowToolbar>
							</VBox>
						</VBox>
					</f:GridListItem>
				</f:GridList>
			</content>
		</Panel>
		<Panel expandable="true" width="auto" class="sapUiResponsiveMargin">
			<headerToolbar>
				<OverflowToolbar height="3rem" style="Clear">
					<Title text="Sonstige"/>
					<ToolbarSpacer/>
					<Button icon="sap-icon://settings"/>
					<Button icon="sap-icon://drop-down-list"/>
				</OverflowToolbar>
			</headerToolbar>
			<content>
				<f:GridList class="sapUiSmallMarginTop" items="{
        path : 'currPage>/files',
        sorter: {
            path: 'name',
            descending: false
        },
        filters : [
            { path : 'type', operator : 'EQ', value1 : 'HTML'}
        ]
    }">
					<f:customLayout>
						<grid:GridBoxLayout boxWidth="300px"/>
					</f:customLayout>
					<f:GridListItem class="noBorderBottom noPadding" type="Active" renderType="Bare">
						<VBox height="100%" renderType="Bare">
							<VBox justifyContent="SpaceBetween">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0"/><!-- Don't shrink below minimum size. Fill space if available. -->
								</layoutData>
								<Image visible="{=${currPage>thumbnail} !== undefined }" src="{currPage>thumbnail}" class="sapUiNoMargin"></Image>
								<VBox class="sapUiSmallMargin">
									<Title text="{currPage>name}" wrapping="true"/>
									<Label text="{currPage>date}" wrapping="true"/><!-- <Text text="A great description with useful information about this project. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy." wrapping="true"/> -->
								</VBox>
								<OverflowToolbar design="Solid" class="sapContrast noBorderBottom">
									<ToolbarSpacer/>
									<Button text="Edit" type="Transparent"/>
									<Button icon="sap-icon://sort" type="Transparent"/>
									<Button icon="sap-icon://group-2" type="Transparent"/>
								</OverflowToolbar>
							</VBox>
						</VBox>
					</f:GridListItem>
				</f:GridList>
			</content>
		</Panel>
	</Page>
</mvc:View>