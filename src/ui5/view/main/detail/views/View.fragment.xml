<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <CustomListItem id="view" class="sapUiSmallMarginTopBottom">
        <Panel expandable="true" expanded="false" width="auto">
            <headerToolbar>
                <OverflowToolbar height="3rem" style="Clear">
                    <Title text="{currPage>title}"/>
                </OverflowToolbar>
            </headerToolbar>
            <IconTabBar expanded="true" expandable="false" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter text="Allgemein">
                        <VBox>
                            <Label text="Name"/>
                            <Input type="Text" value="{currPage>title}" class="sapUiTinyMarginBottom"/>
                            <Label text="Statement"/>
                            <TextArea value="{currPage>statement}" class="sapUiTinyMarginBottom" width="100%" rows="8"></TextArea>
                        </VBox>
                    </IconTabFilter>
                    <IconTabFilter text="Anzeige">
                    </IconTabFilter>
                </items>
            </IconTabBar>
            <HBox justifyContent="End" alignItems="End" alignContent="End" class="sapUiSmallMarginTop">
                <Button type="Reject" text="LÃ¶schen" icon="sap-icon://delete" press="onDelete" class="sapUiTinyMarginEnd" visible="{= ${currPage>title} !== undefined }"/>
                <Button type="Emphasized" text="Speichern" icon="sap-icon://save" press="onSave"/>
            </HBox>
        </Panel>
    </CustomListItem>
</core:FragmentDefinition>