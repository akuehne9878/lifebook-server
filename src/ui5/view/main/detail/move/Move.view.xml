<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:uxap="sap.uxap" xmlns:u="sap.ui.unified" controllerName="lifebook.view.main.detail.move.Move" height="100%">
  <Page>
    <customHeader>
      <Bar>
        <contentMiddle>
          <Title text="{currPage>/title} verschieben" />
        </contentMiddle>
        <contentRight>
          <Button type="Transparent" icon="sap-icon://decline"  press="onClose"  />
        </contentRight>
      </Bar>
    </customHeader>
    <content>
      <VBox class="sapUiSmallMarginTopBottom">
        <VBox class="sapUiSmallMarginBeginEnd">
         <Tree items="{path: 'tree>/items'}">
            <CustomTreeItem type="Active" press="onPress" highlight="{= (${tree>path} === ${currTarget>/path} &amp;&amp; (${tree>type} === 'page' || ${tree>type} === 'lifebook') )  ? 'Information': 'None' }">
               <HBox visible="{=${tree>type} === 'page' || ${tree>type} === 'lifebook' }">
                  <Text text="{tree>title}" />
               </HBox>
               <HBox visible="false">
                  <core:Icon src="sap-icon://add" class="sapUiSmallMarginEnd" />
                  <Text text="{tree>title}" />
               </HBox>
               <HBox visible="false">
                  <Input type="Text" value="{tree>title}" submit="" />
                  <Button icon="sap-icon://accept" type="Transparent" press="onCreatePage" />
                  <Button icon="sap-icon://decline" type="Transparent" press="onCancelCreatePage" />
               </HBox>
            </CustomTreeItem>
         </Tree>
        </VBox> 
        <VBox justifyContent="End"  alignItems="End" alignContent="End"  class="sapUiSmallMarginEnd">
          <Text text="{currPage>/title} wird verschoben nach: {currTarget>/title}"  class="sapUiSmallMargin" />
          <Button type="Emphasized" text="Verschieben" enabled="{=${currTarget>/title} !== undefined}" icon="sap-icon://save"  press="onSave"  />
        </VBox>
      </VBox>
    </content>
  </Page>
</mvc:View>