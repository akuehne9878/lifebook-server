<mvc:View xmlns:mvc="sap.ui.core.mvc" 
   xmlns="sap.m" 
   xmlns:codeeditor="sap.ui.codeeditor" 
   xmlns:core="sap.ui.core" 
   xmlns:layout="sap.ui.layout" 
   xmlns:uxap="sap.uxap" controllerName="lifebook.view.main.detail.Detail">
   <Page enableScrolling="false" showHeader="false">
      <content>
         <FlexBox height="100%" width="100%" renderType="Bare">
            <IconTabBar id="itb" expanded="true" expandable="false" select="onSelectTab" stretchContentHeight="true">
               <items>
                  <IconTabFilter text="Seite" key="preview">
                     <Page enableScrolling="true" showHeader="false" class="whiteBackground">
                        <VBox renderType="Bare" id="htmlViewer" class="markdown-body" />
                     </Page>
                  </IconTabFilter>
                  <IconTabFilter text="Editor" key="edit">
                     <Page enableScrolling="true" showHeader="false" class="whiteBackground">
                        <HBox height="100%" renderType="Bare">
                           <codeeditor:CodeEditor height="100%" width="50%" type="markdown" value="{currPage>/content}" liveChange="onLiveChange" />

                           <VBox width="50%" height="100%" renderType="Bare" class="sapUiSmallMarginBegin" >
                              <Page enableScrolling="true" showHeader="false" class="whiteBackground">
                                 <VBox renderType="Bare" id="editorPreview" class="markdown-body" />
                              </Page>
                           </VBox>
                        </HBox>
                     </Page>
                  </IconTabFilter>
                  <IconTabFilter text="Attachments" key="attachments">
                     <Page enableScrolling="true" showHeader="false" class="whiteBackground">
                        <mvc:XMLView viewName="lifebook.view.main.detail.attachments.Attachments"/>
                     </Page>
                  </IconTabFilter>
               </items>
            </IconTabBar>
         </FlexBox>
      </content>
   </Page>
</mvc:View>