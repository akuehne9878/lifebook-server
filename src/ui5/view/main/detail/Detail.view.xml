<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:codeeditor="sap.ui.codeeditor" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:uxap="sap.uxap" controllerName="lifebook.view.main.detail.Detail" xmlns:html="http://www.w3.org/1999/xhtml" height="100%">
   <Page enableScrolling="false" showHeader="false">
      <content>
         <FlexBox height="100%" width="100%" renderType="Bare">
            <IconTabBar id="itb" expanded="true" expandable="false" select="onSelectTab" stretchContentHeight="true" class="myClass">
               <items>
                  <IconTabFilter text="Seite" key="preview">
                     <Page enableScrolling="true" showHeader="true" class="whiteBackground background">
                        <customHeader>
                           <OverflowToolbar>
                              <ToolbarSpacer/>
                              <Button type="Transparent" icon="sap-icon://add-document" text="Neue Seite" press="onShowNew"/>
                              <Button type="Transparent" icon="sap-icon://edit" text="Umbenennen" press="onShowEdit"/>
                              <Button type="Transparent" icon="sap-icon://copy" text="Kopieren" press="onShowCopy"/>
                              <Button type="Transparent" icon="sap-icon://action" text="Verschieben" press="onShowMove"/>
                              <Button type="Transparent" icon="sap-icon://delete" text="LÃ¶schen" press="onDeletePage"/>
                           </OverflowToolbar>
                        </customHeader>
                        <html:div renderType="Bare" id="htmlViewer" class="markdown-body sapUiSmallMargin"/>
                     </Page>
                  </IconTabFilter>
                  <IconTabFilter text="Editor" key="edit">
                     <Page enableScrolling="true" showHeader="true" class="whiteBackground">
                        <customHeader>
                           <OverflowToolbar>
                              <ToolbarSpacer/>
                              <Button type="Transparent" icon="sap-icon://save" text="Speichern" press="onSavePage"/>
                           </OverflowToolbar>
                        </customHeader>
                        <HBox height="100%" renderType="Bare">
                           <codeeditor:CodeEditor height="100%" width="{=${device>/system/phone} ? '100%' : '50%' }" type="markdown" value="{currPage>/content}" liveChange="onLiveChange"/>
                           <VBox width="{=${device>/system/phone} ? '0%' : '50%' }" height="100%" renderType="Bare" class="sapUiSmallMarginBegin">
                              <Page enableScrolling="true" showHeader="false" class="whiteBackground">
                                 <html:div renderType="Bare" id="editorPreview" class="markdown-body"/>
                              </Page>
                           </VBox>
                        </HBox>
                     </Page>
                  </IconTabFilter>
                  <IconTabFilter text="Attachments" key="attachments">
                     <mvc:XMLView viewName="lifebook.view.main.detail.attachments.Attachments"/>
                  </IconTabFilter>
               </items>
            </IconTabBar>
         </FlexBox>
      </content>
   </Page>
</mvc:View>