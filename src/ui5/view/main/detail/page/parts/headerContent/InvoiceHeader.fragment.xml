<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout">
	<layout:VerticalLayout visible="{=${currPage>/linked_entity} !== undefined &amp;&amp; ${currPage>/linked_entity/invoice} !== undefined}">
		<ObjectStatus title="Rechnungsname" text="{currPage>/linked_entity/invoice/name}"/>
		<ObjectStatus title="Rechnungs-Nummer" text="{currPage>/linked_entity/invoice/invoice_number}"/>
		<ObjectStatus title="Rechnungs-Datum" text="{currPage>/linked_entity/invoice/invoice_date}"/>
		<ObjectStatus title="Zahlungs-Datum" text="{currPage>/linked_entity/invoice/payment_date}"/>
		<ObjectStatus title="Gezahlt von" text="{currPage>/linked_entity/invoice/payed_by}"/>
		<ObjectStatus title="Gesamtbetrag" text="{currPage>/linked_entity/invoice/total}"/>
	</layout:VerticalLayout>
</core:FragmentDefinition>