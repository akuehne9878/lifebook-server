<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:uxap="sap.uxap" xmlns:u="sap.ui.unified" controllerName="lifebook.view.main.detail.upload.Upload">
  <Page>
    <customHeader>
      <Bar>
        <contentMiddle>
          <Title text="Upload" />
        </contentMiddle>
        <contentRight>
          <Button type="Transparent" icon="sap-icon://decline"  press="onClose"  />
        </contentRight>
      </Bar>
    </customHeader>
    <content>
      <layout:VerticalLayout>
          <u:FileUploader
            id="fileUploader"
            name="uploadFile"
            uploadUrl="{currPage>/path}/upload"
            tooltip="Upload your file to the local server"
            uploadComplete="handleUploadComplete">

            </u:FileUploader>
          <Button text="Upload File" press="handleUploadPress"/>
      </layout:VerticalLayout>
    </content>
  </Page>
</mvc:View>