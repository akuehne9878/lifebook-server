<mvc:View xmlns:grid="sap.ui.layout.cssgrid" 
	xmlns:f="sap.f" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:layout="sap.ui.layout" controllerName="lifebook.view.main.detail.attachments.Attachments">


	<HBox items="{currPage>/files}" wrap="Wrap" width="70rem" renderType="Bare">
		<CustomListItem type="Active" press="onShowLightBox" class="sapUiSmallMarginEnd sapUiSmallMarginTop tile">
			<VBox height="22rem" renderType="Bare" width="15rem">

				<VBox visible="{=${currPage>thumbnail} !== undefined }" width="15rem" height="15rem" renderType="Bare">
					<Image src="{currPage>thumbnail}" class="sapUiNoMargin" mode="Background" height="15rem" width="15rem" backgroundSize="15rem 15rem" backgroundPosition="center top">
					</Image>
				</VBox>


				<VBox visible="{=${currPage>thumbnail} === undefined }" width="15rem" height="15rem" renderType="Bare">
					<!-- <core:Icon src="sap-icon://attachment" size="3rem" /> -->
				</VBox>

				<VBox justifyContent="SpaceBetween">
					<VBox class="sapUiTinyMargin">
						<Title text="{currPage>name}" wrapping="true"/>
						<Label text="{currPage>date}" wrapping="true"/>
					</VBox>
					<OverflowToolbar design="Transparent" class="sapUiTinyMargin noBorderBottom">
						<ToolbarSpacer/>
						<Button icon="sap-icon://download" press="onDownload" type="Transparent"/>
						<Button icon="sap-icon://delete" press="onDeleteFile" type="Transparent"/>
					</OverflowToolbar>
				</VBox>
			</VBox>
		</CustomListItem>
	</HBox>

</mvc:View>