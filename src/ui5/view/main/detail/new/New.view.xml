<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:uxap="sap.uxap" xmlns:u="sap.ui.unified" controllerName="lifebook.view.main.detail.new.New" height="100%">
  <Page>
    <customHeader>
      <Bar>
        <contentMiddle>
          <Title text="Neue Seite" />
        </contentMiddle>
        <contentRight>
          <Button type="Transparent" icon="sap-icon://decline"  press="onClose"  />
        </contentRight>
      </Bar>
    </customHeader>
    <content>
      <VBox class="sapUiSmallMarginTopBottom">
        <VBox class="sapUiSmallMarginBeginEnd">
          <Input type="Text" value="{/title}" width="100%" submit="onSave" class="sapUiSmallMarginEnd" />
        </VBox> 
        <VBox justifyContent="End"  alignItems="End" alignContent="End"  class="sapUiSmallMarginEnd">
          <Button type="Emphasized" text="Neue Seite erstellen" icon="sap-icon://save"  press="onSave"  />
        </VBox>
      </VBox>
    </content>
  </Page>
</mvc:View>