<mvc:View xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.f" xmlns:mvc="sap.ui.core.mvc" controllerName="lifebook.view.baseLayout.BaseLayout" height="100%">
	<Page id="outerPage" class="pai036-Background pai036-customHeader pai036-base-layout-outerPage" enableScrolling="false" showFooter="false">
		<customHeader>
			<!-- PRIMARY HEADER -->
		</customHeader>
		<!-- <Page id="innerPage" class="pai036-Background pai036-customHeader pai036-base-layout-innerPage" enableScrolling="false" showFooter="false"> -->
			<!-- <customHeader> -->
				<!-- SECONDARY HEADER -->
			<!-- </customHeader> -->
			<SplitContainer id="splitContainer" mode="ShowHideMode">
				<masterPages>
					<Page id="masterPageContainer" showHeader="false">
						<!-- MASTER PAGE -->
					</Page>
				</masterPages>
				<detailPages>
					<Page id="detailContainer" showHeader="false" showNavButton="false" class="detailContainer">
						<Page id="detailPage" class="detailPage" showHeader="{meta>/showDetailHeader}">
							<customHeader>
								<!-- DETAIL HEADER -->
							</customHeader>
							<l:DynamicSideContent id="dsc" showSideContent="{meta>/showSideContentSpace}" showMainContent="{meta>/showMainContent}">
								<l:mainContent>
									<Page id="detailPageContainer" class="pai036-hideDetailScrollbar detailPageContainer" showHeader="false">
										<!-- DETAIL PAGE -->
									</Page>
								</l:mainContent>
								<l:sideContent>
									<Page id="sideContentPageContainer" showHeader="false" visible="{meta>/showSideContent}">
										<!-- SIDECONTENT PAGE -->
									</Page>
								</l:sideContent>
							</l:DynamicSideContent>
						</Page>
					</Page>
				</detailPages>
			</SplitContainer>
		<!-- </Page> -->
	</Page>
</mvc:View>
