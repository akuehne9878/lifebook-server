<mvc:View xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" controllerName="lifebook.view.baseLayout.messageDialog.MessageDialog" height="100%">
	<Dialog>
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="{/title}" />
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://decline" tooltip="{i18n>common.button.close}" press="closeDialog" type="Transparent" />
				</contentRight>
			</Bar>
		</customHeader>

		<content>
			<VBox class="sapUiSmallMargin">
				<Label text="{/message}"></Label>
			</VBox>
		</content>
		<endButton>
			<Button text="{i18n>common.button.delete}" press="onDelete" type="Emphasized" enabled="{metaInfo>/emphasizedButtonEnabled}" />
		</endButton>
	</Dialog>
</mvc:View>	
	
