<mvc:View controllerName="lifebook.layout.Layout" 
  xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:core="sap.ui.core" 
  xmlns:l="sap.ui.layout">
  <Page id="mainPage" showHeader="true">
    <customHeader>
      <core:Fragment fragmentName="lifebook.layout.Header" type="XML" />
    </customHeader>
    <Page id="innerPage" showHeader="false">
      <customHeader>
        <Toolbar>
          <Button type="Transparent" icon="sap-icon://add-coursebook" text="Neues Lifebook" />
          <Button type="Transparent" icon="sap-icon://add-document" text="Neue Seite" press="onShowNew" visible="{detailHeader>/newButton}" />
          <Button type="Transparent" icon="sap-icon://edit" text="Umbenennen" press="onShowEdit" visible="{detailHeader>/editButton}"/>
          <Button type="Transparent" icon="sap-icon://upload" text="Upload" press="onShowUpload" visible="{detailHeader>/uploadButton}" />
          <Button type="Transparent" icon="sap-icon://copy" text="Kopieren" press="onShowCopy" visible="{detailHeader>/copyButton}" />
          <Button type="Transparent" icon="sap-icon://action" text="Verschieben" press="onShowMove" visible="{detailHeader>/moveButton}" />
          <Button type="Transparent" icon="sap-icon://delete" text="LÃ¶schen" press="onDeletePage" visible="{detailHeader>/deleteButton}" />
          <Button type="Transparent" icon="sap-icon://save" text="Speichern" press="onSavePage" visible="{detailHeader>/saveButton}" />
        </Toolbar>
      </customHeader>
      <SplitContainer id="splitContainer">
        <masterPages>

        </masterPages>

        <detailPages>
          <Page id="detailPage" showHeader="true">
            <customHeader>
            </customHeader>
            <l:DynamicSideContent id="detailDSC" sideContentPosition="End">
              <l:mainContent>
              </l:mainContent>

              <l:sideContent>
              </l:sideContent>
            </l:DynamicSideContent>
          </Page>
        </detailPages>

      </SplitContainer>
    </Page>
  </Page>

</mvc:View>