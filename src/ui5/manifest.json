{
  "_version": "1.12.0",
  "sap.app": {
    "id": "lifebook",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "applicationVersion": {
      "version": "1.0.0"
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "rootView": {
      "viewName": "lifebook.view.App",
      "type": "XML",
      "async": true
    },
    "dependencies": {
      "minUI5Version": "1.60",
      "libs": {
        "sap.m": {}
      }
    },
    "models": {
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "lifebook.i18n.i18n"
        }
      }
    },
    "routing": {
      "config": {
         "routerClass": "sap.m.routing.Router",
         "viewType": "XML",
         "viewPath": "lifebook.view",
         "controlId": "app",
         "controlAggregation": "pages",
         "async": true       
      },
      "routes": [{
         "pattern": "",
         "target": "home"         
      },
      {
        "pattern": "/{path}",
        "name": "page",
        "target": "page"         
     }    ],
      "targets": {
         "home": {
            "viewName": "main.Main",
            "viewLevel" : 1
         },
         "page": {
          "viewName": "main.Main",
          "viewLevel" : 1
       }         
      }
   }    
  }
}
